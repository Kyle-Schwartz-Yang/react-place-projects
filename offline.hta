<html>
  <head>
    <title>Confirm Block</title>

    <HTA:Application
      width="400"
      height="200"
      border="none"
      caption="yes"
      contextMenu="no"
      maximizeButton="no"
      minimizeButton="no"
      scroll="no"
      singleInstance="yes"
    />

    <style>
      body {
        margin: 0;
        padding: 0;
        background: #0f0f0f;
        color: white;
        height: 100%;
        width: 100%;
      }

      .window {
        height: 100%;
        width: 100%;
        padding: 50px;
        border-radius: 12px;

        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.8);

        text-align: center;
      }

      .message {
        font-size: 20px;
        margin-bottom: 20px;
        line-height: 1.4;
      }

      .button-container {
        display: flex;
        justify-content: center;
        gap: 12px;
      }

      .btn {
        padding: 8px 18px;
        width: 100px;
        border-radius: 8px;
        font-size: 14px;
        border: none;
        cursor: pointer;
        transition: 0.2s;
        font-weight: 500;
      }

      .btn-yes {
        background: #00a67e;
        color: white;
        margin-right: 10px;
      }

      .btn-no {
        background: #2f2f2f;
        color: #d0d0d0;
      }
    </style>

    <script language="VBScript">

      Sub Window_OnLoad
         window.resizeTo 400, 200
         window.moveTo (screen.width - 360) / 2, (screen.height - 200) / 2
      End Sub

      Sub ConfirmYes
          CreateObject("WScript.Shell").Run "rundll32 user32.dll,LockWorkStation", 0, False
          window.close
      End Sub

      Sub ConfirmNo
          window.close
      End Sub
    </script>
  </head>

  <body>
    <div class="window">
      <div class="message">Are you sure ?</div>

      <div class="button-container">
        <button class="btn btn-yes" onclick="ConfirmYes">Yes</button>
        <button class="btn btn-no" onclick="ConfirmNo">Cancel</button>
      </div>
    </div>
  </body>
</html>
